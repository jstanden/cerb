		<!-- Task Toolbar -->
			
		<extension point="cerberusweb.task.toolbaritem">
			<id>timetracking.task.toolbaritem.timer</id>
			<name>Task Toolbar Timer</name>
			<class>
				<file>api/App.php</file>
				<name>ChTimeTrackingTaskToolbarTimer</name>
			</class>
			<params>
			</params>
		</extension>
	 
		<!-- Activity Tabs -->
		
		<extension point="cerberusweb.activity.tab">
			<id>timetracking.activity.tab</id>
			<name>TimeTracking Tab</name>
			<class>
				<file>api/App.php</file>
				<name>TimeTrackingActivityTab</name>
			</class>
			<params>
				<param key="uri" value="timetracking" />
				<param key="title" value="timetracking.activity.tab" />
			</params>
		</extension>
	
		<!-- Config Tabs -->
		
		<extension point="cerberusweb.config.tab">
			<id>timetracking.config.tab.activities</id>
			<name>Categories Tab</name>
			<class>
				<file>api/App.php</file>
				<name>ChTimeTrackingConfigActivityTab</name>
			</class>
			<params>
				<param key="uri" value="timetracking.activities" />
				<param key="title" value="Time Tracking" />
			</params>
		</extension>
		
		<!-- Controllers -->
		
 		<extension point="cerberusweb.page">
			<id>timetracking.page</id>
			<name>Time Tracking Page</name>
			<class>
				<file>api/App.php</file>
				<name>ChTimeTrackingPage</name>
			</class>
			<params>
				<param key="uri" value="timetracking" />
				<param key="menutitle" value="" />
			</params>
		</extension>
		 
		<!-- REST Controllers -->
		
		<extension point="cerberusweb.rest.controller">
			<id>cerberusweb.rest.controller.timetracking</id>
			<name>Time Tracking</name>
			<class>
				<file>api/rest/timetracking.php</file>
				<name>ChRest_TimeTracking</name>
			</class>
			<params>
				<param key="uri" value="timetracking" />
			</params>
		</extension>		
		 
		<!-- Custom Field Source -->
		 
		<extension point="cerberusweb.fields.source">
			<id>timetracking.fields.source.time_entry</id>
			<name>Time Tracking</name>
			<class>
				<file>api/App.php</file>
				<name>ChCustomFieldSource_TimeEntry</name>
			</class>
			<params>
			</params>
		</extension>
		 
