<!DOCTYPE plugin SYSTEM "../../libs/devblocks/plugin.dtd">
<plugin>
	<id>usermeet.core</id>
	<name>Cerberus Helpdesk Community Tools</name>
	<description>Support for customer-focused public tools for your websites</description>
	<author>WebGroup Media, LLC.</author>
	<revision>0</revision>
	<class>
		<file>classes.php</file>
		<name>UmCorePlugin</name>
	</class>
	
	<extensions>
	
		<!-- Patch Containers -->
		
		<extension point="devblocks.patch.container">
			<id>usermeet.patches</id>
			<name>Usermeet Patches</name>
			<class>
				<file>patch.classes.php</file>
				<name>UmPatchContainer</name>
			</class>
			<params>
			</params>
		</extension>
	
		<extension point="devblocks.controller">
			<id>usermeet.controller.portal</id>
			<name>Community Portal Controller</name>
			<class>
				<file>classes.php</file>
				<name>UmPortalController</name>
			</class>
			<params>
			</params>
		</extension>
		
		<extension point="cerberusweb.page">
			<id>usermeet.page.community</id>
			<name>Community Page</name>
			<class>
				<file>classes.php</file>
				<name>UmCommunityPage</name>
			</class>
			<params>
				<param key="uri" value="community" />
				<param key="title" value="Communities" />
				<param key="menutitle" value="Communities" />
			</params>
		</extension>
		
		<!-- Usermeet Tools -->
		
		<extension point="usermeet.tool">
			<id>kb.tool</id>
			<name>Public Knowledgebase</name>
			<class>
				<file>classes.php</file>
				<name>UmKbApp</name>
			</class>
			<params>
			</params>
		</extension>
		
		<extension point="usermeet.tool">
			<id>support.tool</id>
			<name>Contact Form Builder</name>
			<class>
				<file>classes.php</file>
				<name>UmContactApp</name>
			</class>
			<params>
			</params>
		</extension>
		
	</extensions>
</plugin>