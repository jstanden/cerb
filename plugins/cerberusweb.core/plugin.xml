<!DOCTYPE plugin SYSTEM "../../libs/devblocks/plugin.dtd">
<plugin>
	<id>cerberusweb.core</id>
	<name>Cerberus Helpdesk Core</name>
	<description>The core functionality of Cerberus Helpdesk.</description>
	<author>WebGroup Media, LLC.</author>
	<revision>0</revision>
	
	<!-- 
	<requires>
		<plugin id="plugin.core.id" version=">= 1.0" />
	</requires>
	 -->

	<mapping>
		<uri value="login" extension_id="core.page.signin" />
		<uri value="welcome" extension_id="core.page.welcome" />
		<uri value="tickets" extension_id="core.page.tickets" />
		<uri value="display" extension_id="core.page.display" />
		<uri value="config" extension_id="core.page.configuration" />
		<uri value="preferences" extension_id="core.page.preferences" />
		<uri value="files" extension_id="core.page.files" />
		<uri value="cron" extension_id="core.page.cron" />
		<uri value="tests" extension_id="core.page.tests" />
	</mapping>

	<extensions>

		<!-- Translations -->
		
		<extension point="devblocks.i18n.strings">
			<id>core.translations</id>
			<name>Cerberus Helpdesk Strings</name>
			<class>
				<file>classes.php</file>
				<name>ChTranslations</name>
			</class>
			<params>
			</params>
		</extension>

		<!-- Patch Containers -->
		
		<extension point="devblocks.patch.container">
			<id>core.patches</id>
			<name>Cerberus Helpdesk Patches</name>
			<class>
				<file>patch.classes.php</file>
				<name>ChCorePatchContainer</name>
			</class>
			<params>
			</params>
		</extension>
	
		<!-- Http Listeners -->
		
		<extension point="devblocks.listener.http">
			<id>core.listeners.tour</id>
			<name>Core Helpdesk Tour</name>
			<class>
				<file>listeners.classes.php</file>
				<name>ChCoreTour</name>
			</class>
			<params>
			</params>
		</extension>
	
		<!-- Pages -->

		<extension point="cerberusweb.page">
			<id>core.page.welcome</id>
			<name>Welcome Page</name>
			<class>
				<file>classes.php</file>
				<name>ChWelcomePage</name>
			</class>
			<params>
				<param key="title" value="" />
				<param key="menutitle" value="" />
				<!--<param key="summary" value="support resources" />-->
			</params>
		</extension>

		<extension point="cerberusweb.page">
			<id>core.page.tickets</id>
			<name>Tickets Page</name>
			<class>
				<file>classes.php</file>
				<name>ChTicketsPage</name>
			</class>
			<params>
				<param key="title" value="Tickets" />
				<param key="menutitle" value="Tickets" />
				<!--<param key="summary" value="support resources" />-->
			</params>
		</extension>

		<extension point="cerberusweb.page">
			<id>core.page.display</id>
			<name>Display Ticket Page</name>
			<class>
				<file>classes.php</file>
				<name>ChDisplayPage</name>
			</class>
			<params>
				<param key="title" value="Display" />
				<param key="menutitle" value="" />
				<!--<param key="summary" value="support resources" />-->
			</params>
		</extension>

		<extension point="cerberusweb.page">
			<id>core.page.files</id>
			<name>Files Page</name>
			<class>
				<file>classes.php</file>
				<name>ChFilesPage</name>
			</class>
			<params>
				<param key="title" value="" />
				<param key="menutitle" value="" />
			</params>
		</extension>

		<extension point="cerberusweb.page">
			<id>core.page.tests</id>
			<name>Unit Tests Page</name>
			<class>
				<file>classes.php</file>
				<name>ChTestsPage</name>
			</class>
			<params>
				<param key="title" value="" />
				<param key="menutitle" value="" />
			</params>
		</extension>
		
		<extension point="cerberusweb.page">
			<id>core.page.cron</id>
			<name>Scheduled Tasks (Cron) Page</name>
			<class>
				<file>classes.php</file>
				<name>ChCronPage</name>
			</class>
			<params>
				<param key="title" value="" />
				<param key="menutitle" value="" />
			</params>
		</extension>

		<extension point="cerberusweb.page">
			<id>core.page.signin</id>
			<name>Signin Page</name>
			<class>
				<file>classes.php</file>
				<name>ChSignInPage</name>
			</class>
			<params>
				<param key="title" value="Sign in" />
			</params>
		</extension>

		<extension point="cerberusweb.page">
			<id>core.page.configuration</id>
			<name>Configuration Page</name>
			<class>
				<file>classes.php</file>
				<name>ChConfigurationPage</name>
			</class>
			<params>
				<param key="title" value="Configuration" />
				<param key="menutitle" value="Configuration" />
			</params>
		</extension>

		<extension point="cerberusweb.page">
			<id>core.page.preferences</id>
			<name>Preferences Page</name>
			<class>
				<file>classes.php</file>
				<name>ChPreferencesPage</name>
			</class>
			<params>
				<param key="title" value="Preferences" />
			</params>
		</extension>
		
		<!-- Display Ticket Modules -->
		
		<extension point="cerberusweb.display.module">
			<id>core.display.module.tasks</id>
			<name>Ticket Tasks Module</name>
			<class>
				<file>classes.php</file>
				<name>ChDisplayTicketTasks</name>
			</class>
			<params>
				<param key="title" value="Tasks" />
				<param key="icon" value="images/hand_paper.gif" />
			</params>
		</extension>

		<extension point="cerberusweb.display.module">
			<id>core.display.module.history</id>
			<name>Ticket History Display Module</name>
			<class>
				<file>classes.php</file>
				<name>ChDisplayTicketHistory</name>
			</class>
			<params>
				<param key="title" value="Requester Ticket History" />
				<param key="icon" value="images/scroll_view.gif" />
			</params>
		</extension>
		
		<extension point="cerberusweb.display.module">
			<id>core.display.module.log</id>
			<name>Ticket Log Display Module</name>
			<class>
				<file>classes.php</file>
				<name>ChDisplayTicketLog</name>
			</class>
			<params>
				<param key="title" value="Audit Log" />
				<param key="icon" value="images/document_info.gif" />
			</params>
		</extension>

		<extension point="cerberusweb.display.module">
			<id>core.display.module.conversation</id>
			<name>Ticket Conversation Display Module</name>
			<class>
				<file>classes.php</file>
				<name>ChDisplayTicketConversation</name>
			</class>
			<params>
			</params>
		</extension>
		
		<extension point="cerberusweb.display.module">
			<id>core.display.module.fields</id>
			<name>Ticket Custom Fields Display Module</name>
			<class>
				<file>classes.php</file>
				<name>ChDisplayTicketFields</name>
			</class>
			<params>
				<param key="title" value="Custom Fields" />
				<param key="icon" value="images/form_green.gif" />
			</params>
		</extension>
		
		<!--  Login Extensions -->
		
		<extension point="cerberusweb.login">
			<id>login.default</id>
			<name>Default Login Module</name>
			<class>
				<file>login.classes.php</file>
				<name>DefaultLoginModule</name>
			</class>
			<params>
			</params>
		</extension>

		<!-- 
		<extension point="cerberusweb.login">
			<id>login.ldap</id>
			<name>LDAP Login Module</name>
			<class>
				<file>login.classes.php</file>
				<name>LDAPLoginModule</name>
			</class>
			<params>
			</params>
		</extension>
		-->		
		 
		<!-- Cron Extensions -->
		
		<extension point="cerberusweb.cron">
			<id>cron.pop3</id>
			<name>Default POP3 Module</name>
			<class>
				<file>cron.classes.php</file>
				<name>Pop3Cron</name>
			</class>
			<params>
			</params>
		</extension>		
		
	</extensions>
</plugin>