<!DOCTYPE plugin SYSTEM "../../libs/devblocks/plugin.dtd">
<plugin>
	<id>cerberusweb.reports</id>
	<name>Cerberus Helpdesk: Reports</name>
	<description>Reporting area with helpdesk metrics.</description>
	<author>WebGroup Media, LLC.</author>
	<revision>0</revision>
	<link>http://wiki.cerb4.com/wiki/New_Changes#Interactive_Reports</link>
	<class>
		<file>api/App.php</file>
		<name>ChReportsPlugin</name>
	</class>
	
	<extensions>

