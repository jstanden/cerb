<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.devblocks.com/schema/plugin.xsd">
	<id>example.reply.toolbaritem</id>
	<name>[Examples] Example Reply Toolbar Button</name>
	<description>This plugin adds an example button to the reply toolbar</description>
	<author>Webgroup Media, LLC.</author>
	<version>0.0.0</version>
	<link>http://www.cerberusweb.com/</link>
	
	<!-- Plugin Dependencies -->
	
	<dependencies>
		<require plugin_id="cerberusweb.core" version="5.1.0-dev" />
	</dependencies>
	
	<!-- Exported Classes -->

	<!--	
	<class_loader>
		<file path="api/App.php">
		</file>
	</class_loader>
	-->
	
	<extensions>
    
    	<extension point="cerberusweb.reply.toolbaritem">
			<id>example.reply.toolbaritem.button</id>
			<name>Example Reply Toolbar Button</name>
			<class>
				<file>api/App.php</file>
				<name>ExReplyToolbarButton</name>
			</class>
			<params>
			</params>
		</extension>
		
		
	</extensions>
</plugin>